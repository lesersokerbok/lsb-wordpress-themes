{% for item in items %}
	{% if item.current_item_ancestor or item.current %}
		<div class="lsb_breadcrumbs__section">
		{% if item.current_item_ancestor %}
			<a href="{{ item.link }}" class="lsb_breadcrumbs__item"><span>{{ item.title | capitalize }}</span></a>
			{% include 'breadcrumbs.twig' with {'items': item.children } %}
		{% else %}
			<span class="lsb_breadcrumbs__item {{ item.current ? 'active' : '' }}"><span>{{ item.title | capitalize }}</span></span>
		{% endif %}	
		{% if item.current_item_archive %}
			<div class="lsb_breadcrumbs__section">
				<span class="lsb_breadcrumbs__item active"><span>{{ post.title | capitalize }}</span></span>
			</div>
		{% endif %}	
		</div>
	{% endif %}
{% endfor %}