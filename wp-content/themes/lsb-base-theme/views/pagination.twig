<nav class="lsb_pagination">
	{% if prev.link %}
		<a class="lsb_pagination__item is-prev" href="{{ prev.link }}">
			<span>{{ prev.title | default(__('Forrige side', 'lsb')) }}</span>
		</a>
	{% endif %}
	{% if next.link %}
		<a class="lsb_pagination__item is-next" href="{{ next.link }}">
			<span>{{ next.title | default(__('Neste side', 'lsb')) }}</span>
		</a>
	{% endif %}
</nav>
