{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="lsb-block">
			<div class="lsb-block-header">
				{% block entry_header %}
					<h1 class="lsb-block-title">{{post.title}}</h1>
				{% endblock %}
			</div>
			<div class="lsb-block-body lsb-entry-content">
				{% block entry_content %}
					{{post.content}}
				{% endblock %}
			</div>
			<div class="lsb-block-footer">
				{% block entry_footer %}
				{% endblock %}
			</div>
		</section>
	</article>
{% endblock %}
